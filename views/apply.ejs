    document.getElementById("date").valueAsDate=new Date();
    function checkIP(){
        /*var date=document.getElementById("date").value;//通过id获取需要验证的表单元素的值
        if(date==""){//当上面获取的值为空时
            alert("日期不能为空");//弹出提示
