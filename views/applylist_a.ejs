<!DOCTYPE html>
<html lang="en">

<% include header.ejs %>

<body>

<div id="content">

    <div class="container">

        <div class="row">

            <div class="span3">

                <div class="account-container">

                    <div class="account-details">

                        <span class="account-name"><%= userinfo.username %></span>

                        <span class="account-role"><%= userinfo.department %> | <%= userinfo.position %></span>

                        <span class="account-actions"><%= userinfo.email %></span>

                    </div> <!-- /account-details -->

                </div> <!-- /account-container -->

                <hr />

                <ul id="main-nav" class="nav nav-tabs nav-stacked">

                    <li   class="active">
                        <a href="/alist">
                            <i class="icon-th-list"></i>
                            申请列表
                        </a>
                    </li>

                    <li>
                        <a href="/ulist">
                            <i class="icon-user"></i>
                            用户列表
                        </a>
                    </li>

                    <li>
                        <a href="/adduser">
                            <i class="icon-plus"></i>
                            新增用户
                        </a>
                    </li>

                    <li>
                        <a href="/logout">
                            <i class="icon-lock"></i>
                            注销
                        </a>
                    </li>

                </ul>

                <hr />

                <div class="sidebar-extra">
                    <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud.</p>
                </div> <!-- .sidebar-extra -->

                <br />

            </div> <!-- /span3 -->



            <div class="span9">

                <h1 class="page-title">
                    <i class="icon-th-large"></i>
                    会员数据申请列表
                </h1>

                <div class="widget widget-table">

                    <div class="widget-header">
                        &nbsp;
                        <!--<i class="icon-th-list"></i>-->
                        <!--<h3>申请列表</h3>-->
                        <a class="btn" href="/alist?states=全部">全部</a>
                        <a class="btn" href="/alist?states=申请中">申请中</a>
                        <a class="btn" href="/alist?states=已关闭">已关闭</a>
                        <a class="btn" href="/alist?states=已审核">已审核</a>
                        <a class="btn" href="/alist?states=已拒绝">已拒绝</a>
                        <div style="float: right; margin-right: 5px">
                            <a href="/adown" class="btn">上页</a>
                            <button class="btn"><%= userinfo.currentPage %>/<%= userinfo.pages %></button>
                            <a href="/aup" class="btn">下页</a>
                        </div>
                    </div> <!-- /widget-header -->

                    <div class="widget-content">

                        <table class="table table-striped table-bordered">
                            <thead>
                            <tr>
                                <!--<th>#</th>-->
                                <th>申请编号</th>
                                <th>申请人员</th>
                                <th>申请时间</th>
                                <th>申请字段</th>
                                <th>申请状态</th>
                            </tr>
                            </thead>

                            <tbody>
                            <% for(var i = 0;i < userlist.length;i++){%>
                            <tr  onclick="parent.location='/check=<%=userlist[i].id_apply%>';">
                                <!--<td><%= i+1 %></td>-->
                                <!--<td><%=userlist[i].id_apply%></td>-->
                                <td>MDA<%=(Array(6).join(0) + userlist[i].id_apply).slice(-6);%></td>
                                <td><%=userlist[i].username%></td>
                                <td><%=userlist[i].date_apply%></td>
                                <td><%=userlist[i].data_field_apply%></td>
                                <td><%=userlist[i].states%></td>
                            </tr>
                            <%} %>

                            </tbody>
                        </table>

                    </div> <!-- /widget-content -->

                </div> <!-- /widget -->


            </div> <!-- /span9 -->

        </div> <!-- /row -->

    </div> <!-- /container -->

</div> <!-- /content -->


<div id="footer">

    <div class="container">
        <hr />
        <p>&copy; 2012 Go Ideate.</p>
    </div> <!-- /container -->

</div> <!-- /footer -->

