<!DOCTYPE html>
<html lang="en">

<% include header.ejs %>

<body>

<div id="content">

    <div class="container">

        <div class="row">

            <div class="span3">

                <div class="account-container">

                    <div class="account-details">

                        <span class="account-name"><%= userinfo.username %></span>

                        <span class="account-role"><%= userinfo.department %> | <%= userinfo.position %></span>

                        <span class="account-actions"><%= userinfo.email %></span>

                    </div> <!-- /account-details -->

                </div> <!-- /account-container -->

                <hr />

                <ul id="main-nav" class="nav nav-tabs nav-stacked">

                    <li>
                        <a href="/alist">
                            <i class="icon-th-list"></i>
                            申请列表
                        </a>
                    </li>

                    <li class="active">
                        <a href="/ulist">
                            <i class="icon-user"></i>
                            用户列表
                        </a>
                    </li>

                    <li>
                        <a href="/adduser">
                            <i class="icon-plus"></i>
                            新增用户
                        </a>
                    </li>

                    <li>
                        <a href="/logout">
                            <i class="icon-lock"></i>
                            注销
                        </a>
                    </li>

                </ul>

                <hr />

                <div class="sidebar-extra">
                    <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud.</p>
                </div> <!-- .sidebar-extra -->

                <br />

            </div> <!-- /span3 -->



            <div class="span9">

                <h1 class="page-title">
                    <i class="icon-user"></i>
                    用户列表
                </h1>

                <div class="widget widget-table">

                    <div class="widget-header">
                        <i class="icon-th-list"></i>
                        <h3>用户列表</h3>
                        <div style="float: right; margin-right: 5px">
                            <a href="/udown" class="btn">上页</a>
                            <button class="btn"><%= userinfo.uPage %>/<%= userinfo.pages %></button>
                            <a href="/uup" class="btn">下页</a>
                        </div>
                    </div> <!-- /widget-header -->

                    <div class="widget-content">

                        <table class="table table-striped table-bordered">
                            <thead>
                            <tr>
                                <th>部门</th>
                                <th>职位</th>
                                <th>姓名</th>
                                <th>联系电话</th>
                            </tr>
                            </thead>

                            <tbody>

                            <% for(var i = 0;i < userlist.length;i++){%>
                            <tr  onclick="parent.location='/adjust?uid=<%=userlist[i].id%>';">
                                <td><%=userlist[i].department%></td>
                                <td><%=userlist[i].position%></td>
                                <td><%=userlist[i].username%></td>
                                <td><%=userlist[i].tel%></td>
                            </tr>
                            <%} %>

                            </tbody>
                        </table>

                    </div> <!-- /widget-content -->

                </div> <!-- /widget -->


            </div> <!-- /span9 -->

        </div> <!-- /row -->

    </div> <!-- /container -->

</div> <!-- /content -->


<div id="footer">

    <div class="container">
        <hr />
        <p>&copy; 2012 Go Ideate.</p>
    </div> <!-- /container -->

</div> <!-- /footer -->

<!-- Le javascript
================================================== -->
<!-- Placed at the end of the document so the pages load faster -->
<script src="./js/jquery-1.7.2.min.js"></script>


<script src="./js/bootstrap.js"></script>

</body>
</html>
